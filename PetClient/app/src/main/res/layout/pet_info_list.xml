<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/pet_img"
            android:layout_width="275px"
            android:layout_height="275px"
            android:layout_margin="6px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/dog"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pet_name"
            android:text="dog"
            android:textSize="50dp"
            android:layout_alignTop="@+id/pet_img"
            android:layout_toRightOf="@+id/pet_img"
            android:layout_toEndOf="@+id/pet_img"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/pet_sex"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/pet_name"
            android:layout_toEndOf="@+id/pet_name"
            android:src="@drawable/head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pet_date"
            android:textSize="15dp"
            android:text="生日：7月14日"
            android:layout_toRightOf="@+id/pet_img"
            android:layout_toEndOf="@+id/pet_img"
            android:layout_marginTop="62dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet_weight"
        android:textSize="15dp"
        android:text="体重：20kg"
        android:layout_toRightOf="@+id/pet_img"
        android:layout_toEndOf="@+id/pet_img"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pet_intro"
        android:layout_toRightOf="@+id/pet_img"
        android:layout_toEndOf="@+id/pet_img"
        android:layout_marginTop="97dp"
        android:textSize="15dp"
        android:text="dongis鸡蛋哦is那打暗的哈"
        />
</RelativeLayout>